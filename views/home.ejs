<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1> POPULAR QUOTES </h1>
		
		<form action='/author' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>First Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' placeholder='Jose' required>
				</div>
			</div>
			<div class='form-group row'>
				<label for='lastname' class='col-sm-4 col-form-label'>Last Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='lastname' name='lastname' placeholder='Perez' required>
				</div>
			</div>
	</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Author</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
		
		<div class='row'>
        	<table>
        		<tr><th>Author</th><th>Action</th></tr>
        		<tr><td colspan="2"><hr/></td></tr>
        		<%authors.forEach(function(author){%>
            		<tr>
            			<td><%=author.firstName%> <%=author.lastName%></td>
            			<td><a href='/author/<%=author.authorId%>'>Info</a></td></tr>
        	<% }); %>
        	</table>
    </div>
	
	<h2>Or Search a diifferent way... </h2>
	
	
	<a href='/keywords'> Keyword</a> | <a href='/category'> Category</a> | <a href='/sex'> Gender</a>|
</div>

<%- include ('templates/footer'); -%>